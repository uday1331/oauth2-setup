[
  {
    "id": "connect-to-serice",
    "upstream": {
      "url": "http://service:3001/",
      "preserve_host": true
    },
    "match": {
      "url": "http://<127.0.0.1|localhost>:4455/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [
      {
        "handler": "id_token",
        "config": {
          "issuer_url": "http://localhost:3001/",
          "jwks_url": "file:///jwks.json"
        }
      }
    ],
    "errors": [
      {
        "handler": "json"
      }
    ]
  }
]
